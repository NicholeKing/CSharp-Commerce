@model Product
<a href="/Dashboard">Back</a>

<h2>@Model.Name Edit Page</h2>
<form action="/EditCheck" method="post">
    <div class="form-group">
        <label>Name of Product</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <input asp-for="Description" class="form-control" value="@Model.Description">
    </div>
    <div class="form-group">
        <label>Price</label>
        <span asp-validation-for="Price" class="text-danger"></span>
        <input asp-for="Price" class="form-control" value="@Model.Price">
    </div>
    <div class="form-group">
        <label>Quantity of Available Product</label>
        <span asp-validation-for="Quantity" class="text-danger"></span>
        <input asp-for="Quantity" class="form-control" value="@Model.Quantity">
    </div>
    <input type="hidden" name="PID" value="@Model.PID">
    <input type="submit" class="btn btn-primary" value="Edit Product">
</form>